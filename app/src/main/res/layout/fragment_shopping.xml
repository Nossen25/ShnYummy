<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Shopping.ShoppingFragment"
    android:id="@+id/frameShopping"
    android:background="#DDFBBA"
    >



    <TextView
        android:id="@+id/credittv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:text="To Buy You Need To Add Credit Card"
        android:layout_gravity="center"
        android:layout_marginBottom="100dp"
        android:textSize="25dp"
        >


    </TextView>

    <Button
        android:id="@+id/btnMoveCredit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Credit Card"
        android:textColor="#2C4A08"
        android:background="#1BF4ED"
        android:textAllCaps="false"
        android:layout_gravity="center"

        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</FrameLayout>